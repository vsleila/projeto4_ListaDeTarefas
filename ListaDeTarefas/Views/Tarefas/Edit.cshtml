@model ListaDeTarefas.Models.Tarefas;

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Tarefa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NomeDaTarefa" class="control-label"></label>
        <input asp-for="NomeDaTarefa" class="form-control" />
        <span asp-validation-for="NomeDaTarefa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DtaInicio" class="control-label"></label>
        <input asp-for="DtaInicio" class="form-control" />
        <span asp-validation-for="DtaInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DtaFim" class="control-label"></label>
        <input asp-for="DtaFim" class="form-control" />
        <span asp-validation-for="DtaFim" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

<br />
<div>
    <a asp-action="Index" class="btn btn-outline-primary mt-2">Voltar para Lista</a>
</div>

